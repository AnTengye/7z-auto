<Window x:Class="Auto7z.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Auto7z - Win11 Smart Unpacker" Height="450" Width="600"
        AllowDrop="True" Drop="Window_Drop" DragOver="Window_DragOver">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <!-- Drop Zone -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Rectangle Stroke="#AAAAAA" StrokeThickness="2" StrokeDashArray="4 2" 
                       RadiusX="10" RadiusY="10" Fill="#F9F9F9"/>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="ðŸ“‚" FontSize="32" HorizontalAlignment="Center" Foreground="#555"/>
                <TextBlock Text="Drag Archives Here" FontSize="16" FontWeight="SemiBold" 
                           Foreground="#555" Margin="0,10,0,0"/>
            </StackPanel>
        </Grid>

        <!-- Log Output -->
        <TextBox x:Name="LogBox" Grid.Row="1" IsReadOnly="True" 
                 VerticalScrollBarVisibility="Auto" FontFamily="Consolas" FontSize="12"
                 TextWrapping="Wrap" Background="#222" Foreground="#EEE" Padding="5"/>

        <!-- Progress Bar -->
        <ProgressBar x:Name="ExtractionProgress" Grid.Row="2" Height="6" Minimum="0" Maximum="100"
                     Value="0" Visibility="Collapsed" Margin="0,0,0,2"
                     Foreground="#4CAF50" Background="#333"/>

        <!-- Status Bar -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock x:Name="StatusText" Text="Ready." Foreground="#666"/>
            <Button x:Name="SettingsButton" Content="âš™ Settings" Margin="20,0,0,0" 
                    Padding="10,2" Click="SettingsButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
